<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">
	<Resource 
		name="jdbc/datasource" 
		auth="Container"
		type="javax.sql.DataSource" 
		defaultAutoCommit='false' 
		maxActive="50"
		maxIdle="10" 
		maxWait="10" 
		initialSize="10"
		driverClassName="com.mysql.jdbc.Driver" 
		validationQuery="SELECT 'OK'"
		testWhileIdle="true" 
		testOnBorrow="true" 
		numTestsPerEvictionRun="5"
		timeBetweenEvictionRunsMillis="5000"
		minEvictableIdleTimeMillis="60000" 
		antiJARLocking="false"
		antiResourceLocking="false" 
		username="root" 
		password="Senai"
		url="jdbc:mysql://localhost:3307/pifrans_services?autoReconnect=true&amp;useSSL=false" />

	<!-- O arquivo Context.xml é lido pela classe org.apache.tomcat.dbcp.dbcp.PoolingDataSource -->
	<!-- POOL de conexões -->
</Context>